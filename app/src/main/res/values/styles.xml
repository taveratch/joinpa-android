<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColorHighlight">@color/colorRed</item>
        <item name="android:textColorLink">@color/colorRed</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorRedAlpha</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorRedAlpha</item>
    </style>

    <style name="ToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/Theme.AppCompat.Light</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">#FFF</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="JoinButton" parent="@style/Widget.AppCompat.Button.Borderless">
    <item name="android:background">@drawable/rounded_button_green</item>
    <item name="android:height">@dimen/join_button_height</item>
    <item name="android:width">@dimen/join_button_width</item>
    <item name="android:textColor">#FFF</item>
    </style>

    <style name="CancelButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/rounded_button_red</item>
        <item name="android:height">@dimen/join_button_height</item>
        <item name="android:width">@dimen/join_button_width</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="SignInUpButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:height">@dimen/sign_in_up_button_height</item>
        <item name="android:width">@dimen/sign_in_up_button_width</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="toolbarTextTitle">
        <item name="android:textSize">@dimen/text_toolbar_title</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="dialogHeaderStyle">
        <item name="android:layout_marginTop">@dimen/dialog_header_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/dialog_header_bottom_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialogButtonStyle" parent="@style/Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="viewPagerButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/rounded_button_white_alpha45</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
