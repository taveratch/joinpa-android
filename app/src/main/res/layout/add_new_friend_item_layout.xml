<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/list_component_margin"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:id="@+id/add_friend_layout"
        android:background="@drawable/round_list_item_gray"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="@dimen/remove_icon_size"
            android:layout_height="@dimen/remove_icon_size"
            android:id="@+id/imageView3"
            android:src="@drawable/ic_add_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_friend"
            android:id="@+id/textView6"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>