<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/sidebar_icon_margin">

        <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:id="@+id/img_avatar"
            android:src="@drawable/friend_request_icon" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/sidebar_icon_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="taweesoft"
                android:id="@+id/tv_username"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/request_button_height"
            android:text="Accept"
            android:id="@+id/btn_accept"
            android:textColor="#FFF"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/rounded_button_green"
            android:layout_marginRight="@dimen/sidebar_icon_margin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/request_button_height"
            android:text="Decline"
            android:id="@+id/btn_decline"
            android:textColor="#FFF"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/rounded_button_red"
            android:layout_marginLeft="@dimen/sidebar_icon_margin" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        android:id="@+id/divider"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="@dimen/sidebar_icon_margin"
        android:layout_marginBottom="@dimen/list_component_margin"></View>
</LinearLayout>