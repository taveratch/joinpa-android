<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueGray">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/sidebar_icon_size"
            android:layout_height="@dimen/sidebar_icon_size"
            android:id="@+id/img_icon"
            android:src="@drawable/sidebar_account_icon"
            android:layout_margin="@dimen/sidebar_icon_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tonyslark"
            android:id="@+id/tv_itemname"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="@dimen/sidebar_text_size" />
    </LinearLayout>
</LinearLayout>