<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@drawable/rounded_list_item">

    <ImageView
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:id="@+id/img_event_icon"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/sidebar_icon_margin"
        android:src="@drawable/event_1"
        android:padding="@dimen/inside_avatar_padding" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tv_event_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/img_event_icon"
        android:layout_toEndOf="@+id/img_event_icon"
        android:layout_marginLeft="@dimen/sidebar_icon_margin"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>