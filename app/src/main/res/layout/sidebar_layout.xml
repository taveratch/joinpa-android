<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueGray">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/sidebar_icon_size"
            android:layout_height="@dimen/sidebar_icon_size"
            android:id="@+id/img_avatar"
            android:layout_margin="@dimen/sidebar_icon_margin"
            android:src="@drawable/sidebar_account_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tonyslark"
            android:id="@+id/tv_username"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:textSize="@dimen/sidebar_text_size" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="1dp"
        android:background="#FFF"
        android:alpha="0.5"></View>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lv_sidebar"
        android:layout_gravity="center_horizontal"
        android:divider="@null"
        android:dividerHeight="0dp" />
</LinearLayout>