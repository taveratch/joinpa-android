<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/image_user"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:padding="2dp"
            android:background="@drawable/blue_circle"
            android:src="@drawable/sidebar_account_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="username"
            android:id="@+id/username"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_user"
            android:layout_toEndOf="@+id/image_user"
            android:textSize="@dimen/text_small"
            android:textStyle="bold"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"
        android:layout_gravity="center" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/image_event_icon"
                android:layout_margin="5dp"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:background="@drawable/blue_circle_alpha"
                android:src="@drawable/sidebar_myevent_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event name"
                android:id="@+id/text_event_name"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/text_body" />

        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorBlueGray">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="11 people joined"
            android:id="@+id/text_num_joined"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/image_time"
                android:layout_margin="5dp"
                android:layout_gravity="bottom|center"
                android:src="@drawable/ic_time" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/image_location"
                android:layout_margin="5dp"
                android:layout_gravity="bottom|center"
                android:src="@drawable/ic_location"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:id="@+id/text_date"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_small"/>

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:id="@+id/text_time"
                    android:textAlignment="center"
                    android:textSize="12sp" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAlignment="center"
                android:id="@+id/text_location"
                android:layout_gravity="top|center"
                android:textSize="@dimen/text_small"/>

        </FrameLayout>



    </LinearLayout>

</merge>